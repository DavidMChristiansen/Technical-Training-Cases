<Page
    x:Class="InvoicingApp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InvoicingApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center" Width="720">
            <TextBlock x:Name="TB_User"></TextBlock>

            <TextBlock>Company</TextBlock>
            <ComboBox x:Name="CB_Companies" DisplayMemberPath="Name"/>

            <TextBlock>Customer</TextBlock>
            <ComboBox x:Name="CB_Customers" DisplayMemberPath="KeyName"/>

            <Button Click="Button_Click">Send Invoice</Button>
        </StackPanel>
    </Grid>
</Page>
