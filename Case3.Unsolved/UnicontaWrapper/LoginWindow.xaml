<Window x:Class="UnicontaWrapper.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnicontaWrapper"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300">
    <Grid>
        <DockPanel LastChildFill="False" Margin="5">
            <Label DockPanel.Dock="Top">Username</Label>
            <TextBox x:Name="TB_Username" DockPanel.Dock="Top"></TextBox>
            
            <Label DockPanel.Dock="Top">Password</Label>
            <PasswordBox x:Name="PB_Password" DockPanel.Dock="Top"></PasswordBox>
            
            <Button Click="Button_Click" DockPanel.Dock="Top" Margin="0,5,0,0">Login</Button>
        </DockPanel>
    </Grid>
</Window>
