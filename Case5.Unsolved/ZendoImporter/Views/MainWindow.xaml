<Window x:Class="ZendoImporter.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        SizeToContent="Height" Width="250">
    <Grid>
        <DockPanel LastChildFill="False" Margin="5">
            <Label DockPanel.Dock="Top">Company</Label>
            <ComboBox x:Name="CB_Company" DisplayMemberPath="Name" DockPanel.Dock="Top"></ComboBox>

            <DockPanel DockPanel.Dock="Top" Margin="0,5,0,0">
                <Button Click="B_Customers_Click" Height="50" Content="Import Customers" DockPanel.Dock="Left" />
            </DockPanel>
            
            <DockPanel DockPanel.Dock="Top" Margin="0,5,0,0">
                <Button Click="B_Items_Click" Height="50" Content="Import Items" DockPanel.Dock="Left" />
            </DockPanel>

            <DockPanel DockPanel.Dock="Top" Margin="0,5,0,0">
                <Button Click="B_Orders_Click" Height="50" Content="Import Orders" DockPanel.Dock="Left" />
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
