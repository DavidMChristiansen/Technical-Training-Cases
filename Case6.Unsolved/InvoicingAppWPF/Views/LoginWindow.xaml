<Window x:Class="InvoicingAppWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LoginWindow" Width="300" SizeToContent="Height">
    <Grid>
        <DockPanel LastChildFill="True" Margin="5">
            <Label DockPanel.Dock="Top">Username</Label>
            <TextBox x:Name="TB_Username" DockPanel.Dock="Top"></TextBox>

            <Label DockPanel.Dock="Top" Margin="0,5,0,0">Password</Label>
            <PasswordBox x:Name="PB_Password" DockPanel.Dock="Top"></PasswordBox>

            <Button Click="Button_Click" Margin="0,5,0,0">Login</Button>
        </DockPanel>
    </Grid>
</Window>
