<Window x:Class="InvoicingAppWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvoicingAppWPF"
        mc:Ignorable="d"
        Title="MainWindow" Width="400" SizeToContent="Height">
    <Grid>
        <DockPanel Margin="5" LastChildFill="False">
            <Label DockPanel.Dock="Top" Margin="0,5,0,0">Company</Label>
            <ComboBox x:Name="CB_Company" DisplayMemberPath="Name" DockPanel.Dock="Top" />

            <Label DockPanel.Dock="Top" Margin="0,5,0,0">Customer</Label>
            <ComboBox x:Name="CB_Customer" DisplayMemberPath="Name" DockPanel.Dock="Top" />

            <Button Click="Button_Click" DockPanel.Dock="Top" Margin="0,5,0,0">Invoice Customer</Button>
        </DockPanel>
    </Grid>
</Window>
